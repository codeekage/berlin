{
  "name": "newpage",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "bankai build index.js",
    "inspect": "bankai inspect index.js",
    "start": "bankai start index.js",
    "test": "standard && npm run test-deps",
    "publish": "npm run test && npm run build && git add dist && git commit -m 'Publish website' && git subtree push --prefix dist origin gh-pages",
    "test-deps": "dependency-check . && dependency-check . --extra --no-dev -i tachyons"
  },
  "dependencies": {
    "choo": "^6.0.0",
    "choo-devtools": "^1.3.1",
    "sheetify": "^6.1.0",
    "tachyons": "^4.7.4"
  },
  "devDependencies": {
    "bankai": "^8.1.1",
    "dependency-check": "^2.9.1",
    "standard": "^10.0.3"
  },
  "standard": {
    "ignore": [
      "dist"
    ]
  }
}
